type Query {
  heroById(id: ID): Hero
  itemsByHero(id: ID): [Item]
}

type Hero {
  id: ID!
  traits: Traits
  skills: [Skill]!
  ability: String
}

type Traits {
  healthMax: Int
  health: Int
  staminaMax: Int
  stamina: Int
  armor: Int
  moveMax: Int
  move: Int
  attack: Int
  range: Int
  magic: Int
}

type Skill {
  id: ID!
  name: String!
}

type Item {
  id: ID!
  hero: HeroCard
}